{
  "manifest_version": 3,
  "name": "Gibberish Converter",
  "version": "1.1",
  "description": "Convert selected English text to Russian keyboard layout.",
  "permissions": ["contextMenus", "scripting", "storage", "activeTab"],
  "background": {
    "service_worker": "scripts/script.js"
  },
  "action": {
    "default_popup": "main.html",
    "default_title": "Toggle copy"
  }
}